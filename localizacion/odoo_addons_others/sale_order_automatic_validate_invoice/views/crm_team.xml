<odoo>
    <data>

        <record id="automatic_validate_invoice_crm_team_form" model="ir.ui.view">
            <field name="name">Automatic validate invoice crm team form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options_active']" position="inside">
                    <div class="o_row" style="display:inherit">
                        <field name="automatic_create_invoices"/><label for="automatic_create_invoices"/>
                        <field name="automatic_validate_invoices"/><label for="automatic_validate_invoices"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
