<odoo>

    <data>

        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="account_presentation_corralon_form_view">
            <field name="name">account.presentation.corralon.form.view</field>
            <field name="model">account.presentation.corralon</field>
            <field name="arch" type="xml">
                <form string="Presentación Corralón">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" class="oe_inline"/></h1>
                        </div>
                        <group name="presentation_corralon">
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="minimum_amount"/>
                                <field name="corralon_file" filename="filename"/>
                                <field name="filename" invisible="True"/>
                                <button name="generate_file"
                                        type="object"
                                        string="Generar Presentación"
                                        icon="fa-clipboard"
                                />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="account_presentation_corralon_tree_view">
            <field name="name">account.presentation.corralon.tree.view</field>
            <field name="model">account.presentation.corralon</field>
            <field name="arch" type="xml">
                <tree string="Presentación Corralón">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="minimum_amount"/>
                    <field name="corralon_file" filename="filename"/>
                    <field name="filename" invisible="True"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record model="ir.actions.act_window" id="account_presentation_corralon_action">
            <field name="name">Presentación Corralón</field>
            <field name="res_model">account.presentation.corralon</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="account_presentation_corralon_menu_view" 
                  name="Presentación Corralón" 
                  parent="account.menu_finance_reports"
                  action="account_presentation_corralon_action" 
                  sequence="100"/>

    </data>

</odoo>

