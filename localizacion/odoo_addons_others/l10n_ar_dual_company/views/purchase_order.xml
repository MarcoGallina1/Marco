<odoo>

    <record model="ir.ui.view" id="purchase_order_form_view">
        <field name="name">purchase_order_form_view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="replace"/>
            <field name="company_id" position="after">
                <field name="picking_type_id" domain="[('code','=','incoming')]" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
            </field>
            <button id="bid_confirm" position="before">
                <field name="company_parent_id" invisible="1"/>
                <button name="button_confirm_new" type="object" id="bid_confirm_new" class="oe_highlight" string="Confirmar orden" attrs="{'invisible': ['|', ('state', '!=', 'sent'), ('company_parent_id', '!=', False)]}"/>
                <button name="button_confirm_new" type="object" id="draft_confirm_new" string="Confirmar orden" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('company_parent_id', '!=', False)]}"/>
            </button>
            <button id="bid_confirm" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'sent'), ('company_parent_id', '=', False)]}</attribute>
                <attribute name="states"/>
            </button>
            <button id="draft_confirm" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'draft'), ('company_parent_id', '=', False)]}</attribute>
                <attribute name="states"/>
            </button>
        </field>
    </record>

</odoo>

