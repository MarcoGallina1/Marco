<odoo>

    <record model="ir.ui.view" id="multicompany_taxes_relation_form_view">
        <field name="name">multicompany_taxes_relation_form_view</field>
        <field name="model">multicompany.taxes.relation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="src_tax_id"/>
                        </group>
                        <group>
                            <field name="dest_tax_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="multicompany_taxes_relation_tree_view">
        <field name="name">multicompany_taxes_relation_tree_view</field>
        <field name="model">multicompany.taxes.relation</field>
        <field name="arch" type="xml">
            <tree string="Mapeo de impuestos">
                <field name="src_tax_id"/>
                <field name="dest_tax_id"/>
            </tree>
        </field>
    </record>

    <record id="action_multicompany_taxes_relation" model="ir.actions.act_window">
        <field name="name">Mapeo de impuestos</field>
        <field name="res_model">multicompany.taxes.relation</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
        id="multicompany_taxes_relation_menu"
        name="Mapeo de impuestos"
        parent="account.account_invoicing_menu"
        action="action_multicompany_taxes_relation"
        sequence="20"/>

</odoo>

