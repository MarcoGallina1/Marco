<odoo>

    <record id="cash_count_report_wizard_form" model="ir.ui.view">
        <field name="name">cash_count_report_wizard_form</field>
        <field name="model">cash.count.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="report_type"/>
                        <field name="company_id" options="{'no_create': True}"/>
                        <field name="pos_ar_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button type="object" name="export_pdf" string="Exportar PDF" class="oe_highlight"/>
                    <button type="object" name="export_xls" string="Exportar Excel" class="oe_highlight"/>
                    <button special="cancel" name="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="cash_count_report_wizard_action">
        <field name="name">Arqueo de caja</field>
        <field name="res_model">cash.count.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="cash_count_report_wizard_menu" sequence="22" action="cash_count_report_wizard_action"
              parent="l10n_account_check.treasury_main_menu"/>

</odoo>

