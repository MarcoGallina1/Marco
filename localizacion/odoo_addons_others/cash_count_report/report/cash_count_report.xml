<odoo>

    <report
        id="cash_count_report_action"
        model="account.payment"
        string="Arqueo de caja"
        report_type="qweb-pdf"
        file="cash_count_report.cash_count_report"
        name="cash_count_report.cash_count_report"
        menu="False"
    />

    <record id="cash_count_report_format" model="report.paperformat">
        <field name="name">Papel arqueo</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="header_spacing">0</field>
    </record>

    <record id="cash_count_report_action" model="ir.actions.report">
        <field name="paperformat_id" ref="cash_count_report_format"/>
    </record>

</odoo>

