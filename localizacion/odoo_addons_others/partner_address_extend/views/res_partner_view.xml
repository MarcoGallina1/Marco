<odoo>
	<data>

		<record id="view_partner_form_address_extension" model="ir.ui.view">
			<field name="name">res.partner.form.address.extension</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="attributes">
					<attribute name="required">1</attribute>
				</xpath>
				<xpath expr="//field[@name='child_ids']//form//sheet//group//group//field[@name='mobile']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='child_ids']//form//sheet//group//group//field[@name='phone']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='child_ids']//form//sheet//group//group//field[@name='email']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='street']" position="replace">
					<field name="street" invisible="1"/>
					<field name="custom_street" required="1" placeholder="Calle..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
				</xpath>
				<xpath expr="//field[@name='street2']" position="after">
					<div class="address_format_2">
						<field name="street_number" required="1" placeholder="Número..." style="width: 44%" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
						<field name="flat" placeholder="Piso..." style="width: 28%" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
						<field name="department" placeholder="Dto..." style="width: 28%" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
					</div>
				</xpath>
				<xpath expr="//form//form//field[@name='street']" position="replace">
					<field name="street" invisible="1"/>
					<field name="custom_street" attrs="{'required': [('type', '!=', 'contact')]}" placeholder="Calle..." class="o_address_street"/>
				</xpath>
				<xpath expr="//form//form//field[@name='city']" position="attributes">
					<attribute name="attrs">{'required': [('type', '!=', 'contact')]}</attribute>
				</xpath>
				<xpath expr="//form//form//field[@name='state_id']" position="attributes">
					<attribute name="attrs">{'required': [('type', '!=', 'contact')]}</attribute>
				</xpath>
				<xpath expr="//form//form//field[@name='zip']" position="attributes">
					<attribute name="attrs">{'required': [('type', '!=', 'contact')]}</attribute>
				</xpath>
				<xpath expr="//form//form//field[@name='country_id']" position="attributes">
					<attribute name="attrs">{'required': [('type', '!=', 'contact')]}</attribute>
				</xpath>
				<xpath expr="//form//form//field[@name='street2']" position="after">
					<div class="address_format_2">
						<field name="street_number" attrs="{'required': [('type', '!=', 'contact')]}" placeholder="Número..." style="width: 44%"/>
						<field name="flat" placeholder="Piso..." style="width: 28%"/>
						<field name="department" placeholder="Dto..." style="width: 28%"/>
					</div>
				</xpath>
				<field name="website" position="replace"/>
				<field name="function" position="replace"/>
				<field name="title" position="replace"/>
			</field>
		</record>

		<record id="view_partner_property_form" model="ir.ui.view">
			<field name="name">view_partner_property_form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="l10n_ar.partner_l10n_ar_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='property_account_position_id']" position="attributes">
					<attribute name="required">1</attribute>
				</xpath>
			</field>
		</record>

		<record id="res_partner_document_type_form" model="ir.ui.view">
			<field name="name">res_partner_document_type_form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base_vat_ar.res_partner_document_type_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_document_type_id']" position="attributes">
					<attribute name="required">1</attribute>
				</xpath>
			</field>
		</record>

	</data>
</odoo>

