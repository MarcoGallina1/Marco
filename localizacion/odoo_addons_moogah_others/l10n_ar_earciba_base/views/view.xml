<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_position_form2" model="ir.ui.view">
        <field name="name">view.account.position.form2</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="arciba_code"/>
            </field>
        </field>
    </record>

    <record id="retention_retention_form2" model="ir.ui.view">
        <field name="name">retention.retention.form2</field>
        <field name="model">retention.retention</field>
        <field name="inherit_id" ref="l10n_ar_retentions.retention_retention_form"/>
        <field name="arch" type="xml">
            <field name="tax_id" position="after">
                <field name="norm_code"/>
            </field>
        </field>
    </record>

    <record id="perception_perception_form2" model="ir.ui.view">
        <field name="name">perception.perception.form2</field>
        <field name="model">perception.perception</field>
        <field name="inherit_id" ref="l10n_ar_perceptions.perception_perception_form"/>
        <field name="arch" type="xml">
            <field name="tax_id" position="after">
                <field name="norm_code"/>
            </field>
        </field>
    </record>

    <record id="partner_document_type_form2" model="ir.ui.view">
        <field name="name">partner.document.type.form2</field>
        <field name="model">partner.document.type</field>
        <field name="inherit_id" ref="base_vat_ar.partner_document_type_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="arciba_doc_type"/>
            </field>
        </field>
    </record>

    <record id="view_partner_property_form2" model="ir.ui.view">
        <field name="name">view.partner.property.form2</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='fiscal_information']" position="inside">
                <field name="iibb_sit"/>
            </xpath>
        </field>
    </record>

</odoo>
