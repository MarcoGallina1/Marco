<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_wsfe_form2" model="ir.ui.view">
    <field name="name">account.invoice.wsfe.form2</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="l10n_ar_afip_webservices_wsfe.account_invoice_wsfe_form"/>
        <field name="arch" type="xml">
            <field name="cae" position="after">
                <field name="cae_group" invisible="1"/>
            </field>
            <field name="cae" position="attributes">
                <attribute name="attrs">{
                    'readonly': [('cae_group', '=', False)],
                    'invisible': [('document_book_type', 'not in', ['electronic', 'electronic_exportation'])]}
                </attribute>
            </field>
            <field name="cae_due_date" position="attributes">
                <attribute name="attrs">{
                    'readonly': [('cae_group', '=', False)],
                    'invisible': [('document_book_type', 'not in', ['electronic', 'electronic_exportation'])]}
                </attribute>
            </field>
        </field>
    </record>
</odoo>
