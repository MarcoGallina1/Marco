<odoo>

    <record model="ir.ui.view" id="account_deposit_slip_wizard_form">
        <field name="name">account.deposit.slip.wizard.form</field>
        <field name="model">wizard.deposit.slip</field>
        <field name="arch" type="xml">
            <form string="Check Deposit">
                <field name="valid_deposit" invisible="1"/>
                <group attrs="{'invisible': [('valid_deposit', '=', False)]}">
                    <group>
                        <field name="journal_id" widget="selection"/>
                        <field name="total" readonly="1"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>
                <p attrs="{'invisible': [('valid_deposit', '=', True)]}">
                    Los cheques a depositar deben estar en cartera.
                </p>
                <footer>
                    <button type="object" name="action_create_deposit_slip" string="Depositar" class="oe_highlight"
                            attrs="{'invisible': [('valid_deposit', '=', False)]}"
                            groups="l10n_account_check.group_account_treasury_manager"/>
                    <button class="oe_link" special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window
        id="action_check_deposit"
        name="Depositar cheques"
        res_model="wizard.deposit.slip"
        binding_model="account.third.check"
        binding_views="list,form"
        view_mode="form"
        view_id="account_deposit_slip_wizard_form"
        target="new"
    />

</odoo>

