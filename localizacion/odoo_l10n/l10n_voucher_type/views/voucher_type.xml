<odoo>
    <data>
   
        <record model="ir.ui.view" id="voucher_type_tree">
            <field name="name">Voucher type tree</field>
            <field name="model">voucher.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="voucher_type_form">
            <field name="name">Voucher type form</field>
            <field name="model">voucher.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="category"/>
                                <field name="code"/>
                                <field name="prefix"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
            
    </data>
</odoo>

