<?xml version="1.0" encoding="UTF-8"?>
<templates >
    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="replace">
            <t t-if="widget.modelName != 'account.payment'">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    Create
                </button>
            </t>
            <t t-if="widget.modelName == 'account.payment'">
                <button type="button" id="payment_imputation" class="btn btn-primary o_list_button_add" accesskey="c">
                    Create
                </button>
            </t>
        </t>
    </t>
</templates>