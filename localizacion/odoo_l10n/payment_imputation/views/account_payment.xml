<openerp>
    <data>

        <record model="ir.ui.view" id="payment_imputation_form">
            <field name="name">Payment imputation form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form position="attributes">
                    <attribute name="create">0</attribute>
                </form>
                <div name="amount_div" position="after">
                    <field name="payment_imputation_difference" attrs="{'invisible': [('payment_type', '=', 'transfer')]}"/>
                </div>
                <group position="after">
                    <notebook attrs="{'invisible': [('payment_type', '=', 'transfer')]}">
                        <page string="Documentos a imputar">
                            <field name="payment_imputation_ids" colspan="2" attrs="{'readonly': [('state', '!=', 'draft')]}" nolabel="1">
                                <tree editable="bottom" create="false" decoration-info="amount &gt; 0 and amount &lt; amount_residual_in_payment_currency and payment_state =='draft'" decoration-muted="amount == 0 and payment_state =='draft'" decoration-success="amount == amount_residual_in_payment_currency and payment_state =='draft'" decoration-danger="amount &gt; amount_residual_in_payment_currency and payment_state =='draft'">
                                    <field name="concile" string="Imputar total"/>
                                    <field name="name"/>
                                    <field name="move_line_date"/>
                                    <field name="move_line_date_maturity"/>
                                    <field name="move_line_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_currency_id" invisible="1"/>
                                    <field name="payment_currency_id" invisible="1"/>
                                    <field name="payment_state" invisible="1"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="amount_residual_in_payment_currency" string="Restante"/>
                                    <field name="amount_total_in_payment_currency" string="Total"/>
                                    <field name="full_reconcile" string="Conciliacion completa"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documentos imputados">
                            <field name="payment_imputation_move_ids" colspan="2" readonly="1" nolabel="1">
                                <tree editable="bottom" create="false">
                                    <field name="move_id"/>
                                    <field name="invoice_date"/>
                                    <field name="invoice_date_due"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="amount_residual"/>
                                    <field name="amount_total" sum="Total"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="advance_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                </group>
            </field>
        </record>

    </data>
</openerp>

