<odoo>

    <record model="ir.ui.view" id="view_account_payment_form">
        <field name="name">view_account_payment_form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="priority">19</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <field name="show_payment_lines" invisible="1"/>
                <notebook name="payment_lines" attrs="{'invisible': [('show_payment_lines', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>

