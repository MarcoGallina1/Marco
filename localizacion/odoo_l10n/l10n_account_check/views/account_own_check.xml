<odoo>

    <record model="ir.ui.view" id="account_own_check_form">
        <field name="name">Account own check form</field>
        <field name="model">account.own.check</field>
        <field name="arch" type="xml">
            <form create="false" delete="false">
                <header>
                    <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,handed"/>
                </header>
                <sheet>
                    <h1>
                        <span>CHEQUE NÂ° </span>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                    <h1 class="mt0">
                        <span>IMPORTE: </span>
                        <field name="currency_id" invisible="1"/>
                        <field name="amount"
                               attrs="{'readonly': ['|', '|', ('state', '!=', 'draft'), ('destination_payment_id', '!=', False)]}" 
                               widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="issue_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_currency_amount" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('payment_id', '=', False)]}"
                                                                  widget="monetary" options="{'currency_field': 'payment_currency_id'}"/>
                            <field name="check_type" readonly="1"/>
                            <field name="payment_id" invisible="1"/>
                            <field name="payment_currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="bank_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="rate"
                                   attrs="{'invisible': [('same_currency_as_payment', '=', True)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="destination_payment_id" readonly="1"
                                   attrs="{'invisible': [('destination_payment_id', '=', False)]}"/>
                            <field name="destination_partner_id"/>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   groups="base.group_multi_company"/>
                            <field name="same_currency_as_payment" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{&quot;thread_level&quot;: 1}"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_own_check_tree">
        <field name="name">Account own check tree</field>
        <field name="model">account.own.check</field>
        <field name="arch" type="xml">
            <tree create="false"
                  delete="false"
                  decoration-info="state=='draft'"
                  decoration-muted="state=='canceled'"
                  decoration-danger="state=='rejected'"
                  decoration-success="state=='handed'">
                <field name="name"/>
                <field name="check_type"/>
                <field name="issue_date"/>
                <field name="destination_partner_id"/>
                <field name="payment_date"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount" sum='Total' widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="account_own_check_search">
        <field name="name">Account own check search</field>
        <field name="model">account.own.check</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="check_type"/>
                <field name="issue_date"/>
                <field name="payment_date"/>
                <field name="amount"/>
                <field name="state"/>
                <filter string="Utilizados" name="used_checks" domain="[('state', '!=', 'draft')]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="account_own_check_calendar">
        <field name="name">Account own check calendar</field>
        <field name="model">account.own.check</field>
        <field name="arch" type="xml">
            <calendar string="Cheques" color="bank_id" date_start="payment_date" mode="month" quick_add="false">
                <field name="name"/>
                <field name="bank_id"/>
                <field name="amount"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="account_own_check_kanban">
        <field name="name">Account own check kanban</field>
        <field name="model">account.own.check</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    create="false">
                <field name="name"/>
                <field name="check_type"/>
                <field name="issue_date"/>
                <field name="payment_date"/>
                <field name="currency_id"/>
                <field name="amount"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="row">
                                <div class="col-xs-6">
                                    <strong><span><t t-esc="record.name.value"/></span></strong>
                                </div>
                                <div class="col-xs-6 pull-right text-right">
                                    <strong><field name="amount" widget="monetary"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 text-muted">
                                    <span><t t-esc="record.check_type.value"/></span>
                                </div>
                                <div class="col-xs-6">
                                    <span class="pull-right text-right">
                                        <field name="state" widget="kanban_label_selection"
                                               options="{'classes':
                                            {
                                                'draft': 'info',
                                                'canceled': 'muted',
                                                'rejected': 'danger',
                                                'handed': 'success',
                                            }
                                        }"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_own_checks_view" model="ir.actions.act_window">
        <field name="name">Cheques propios</field>
        <field name="res_model">account.own.check</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_used_checks': 1}</field>
    </record>

</odoo>

