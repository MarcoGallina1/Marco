<odoo>

    <record model="ir.ui.view" id="account_payment_type_lines_form">
        <field name="name">account_payment_type_lines_form</field>
        <field name="model">account.payment</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="l10n_payment_line.view_account_payment_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="payment_type_lines" string="MÃ©todos de pago">
                    <field name="payment_type_line_ids" nolabel="1" context="{'default_payment_id': id}"
                           attrs="{'readonly': [('state', '!=', 'draft')]}">
                        <tree editable="bottom">
                            <field name="company_id" invisible="1"/>
                            <field name="payment_id" invisible="1"/>
                            <field name="payment_currency_id" invisible="1"/>
                            <field name="journal_id"/>
                            <field name="currency_id"/>
                            <field name="same_currency_as_payment" invisible="1"/>
                            <field name="rate" attrs="{'invisible': [('same_currency_as_payment', '=', True)]}"/>
                            <field name="amount"/>
                            <field name="payment_currency_amount" sum="Total"/>
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>

