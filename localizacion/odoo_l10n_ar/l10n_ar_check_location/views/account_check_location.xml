<odoo>

    <record model="ir.ui.view" id="account_check_location_form">
        <field name="name">account_check_location_form</field>
        <field name="model">account.check.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" placeholder="UbicaciÃ³n.."/>
                    </h1>
                    <group>
                        <group>
                            <field name="prefix"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_check_location_tree">
        <field name="name">account_check_location_tree</field>
        <field name="model">account.check.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="prefix"/>
            </tree>
        </field>
    </record>

    <record id="action_account_check_location_view" model="ir.actions.act_window">
        <field name="name">Ubicaciones de cheques</field>
        <field name="res_model">account.check.location</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="treasury_configuration_main_menu"
        name="Configuracion"
        groups="l10n_account_check.group_account_treasury_manager"
        parent="l10n_account_check.treasury_main_menu"
        sequence="50"
    />

    <menuitem
        id="account_check_location_menu"
        name="Ubicaciones de cheques"
        parent="treasury_configuration_main_menu"
        action="action_account_check_location_view"
        sequence="100"
    />

</odoo>

