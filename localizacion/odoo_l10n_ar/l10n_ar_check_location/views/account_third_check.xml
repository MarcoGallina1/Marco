<odoo>

    <record model="ir.ui.view" id="account_third_check_form">
        <field name="name">account_third_check_form</field>
        <field name="model">account.third.check</field>
        <field name="inherit_id" ref="l10n_account_check.account_third_check_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="check_location_id"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="account_third_check_tree">
        <field name="name">account_third_check_tree</field>
        <field name="model">account.third.check</field>
        <field name="inherit_id" ref="l10n_account_check.account_third_check_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="check_location_id"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="account_third_check_search">
        <field name="name">account_third_check_search</field>
        <field name="model">account.third.check</field>
        <field name="inherit_id" ref="l10n_account_check.account_third_check_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="check_location_id"/>
            </xpath>
        </field>
    </record>

</odoo>

