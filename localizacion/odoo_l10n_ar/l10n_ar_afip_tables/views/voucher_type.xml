<odoo>
    <data>

        <record model="ir.ui.view" id="voucher_type_denomination_tree">
            <field name="name">Voucher type denomination tree</field>
            <field name="model">voucher.type</field>
            <field name="inherit_id" ref="l10n_voucher_type.voucher_type_tree"/>
            <field name="arch" type="xml">
                <field name="category" position="after">
                    <field name="denomination_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="voucher_type_denomination_form">
            <field name="name">Voucher type denomination form</field>
            <field name="model">voucher.type</field>
            <field name="inherit_id" ref="l10n_voucher_type.voucher_type_form"/>
            <field name="arch" type="xml">
                <group position="inside">
                    <group>
                        <field name="denomination_id"/>
                        <field name="is_debit_note"/>
                        <field name="is_credit_invoice"/>
                    </group>
                </group>
            </field>
        </record>

    </data>
</odoo>

