<odoo>

    <record model="ir.ui.view" id="account_payment_credit_card_lines_form">
        <field name="name">account_payment_credit_card_lines_form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="l10n_payment_line.view_account_payment_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="credit_card_lines" string="Tarjetas de crÃ©dito" attrs="{'invisible': [('partner_type', '=', 'supplier')]}">
                    <field name="credit_card_line_ids" nolabel="1"
                           attrs="{'readonly': [('state', '!=', 'draft')]}">
                        <tree editable="bottom">
                            <field name="company_id" invisible="1"/>
                            <field name="payment_id" invisible="1"/>
                            <field name="payment_currency_id" invisible="1"/>
                            <field name="journal_id" invisible="1"/>
                            <field name="credit_card_id" domain="['|', ('type', '=', parent.payment_type == 'outbound' and parent.partner_type == 'supplier' and 'purchase'), 
                                                                       ('type', '=', parent.partner_type == 'customer' and 'sale')]"/>
                            <field name="payment_plan_id"/>
                            <field name="currency_id"/>
                            <field name="same_currency_as_payment" invisible="1"/>
                            <field name="rate" attrs="{'invisible': [('same_currency_as_payment', '=', True)]}"/>
                            <field name="amount"/>
                            <field name="payment_currency_amount"/>
                            <field name="name"/>
                        </tree>
                        <form>
                            <group>
                                <field name="credit_card_id"/>
                                <field name="payment_plan_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="amount"/>
                                <field name="same_currency_as_payment" invisible="1"/>
                                <field name="rate" attrs="{'invisible': [('same_currency_as_payment', '=', True)]}"/>
                            </group>
                        </form>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>

