<odoo>

    <record model="ir.ui.view" id="credit_card_form">
        <field name="name">Credit card form</field>
        <field name="model">credit.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <h1>
                        <field name="name" placeholder="Nombre.."/>
                    </h1>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Planes de pago">
                            <group>
                                <field name="plan_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="active"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <group>
                                                <field name="quantity"/>
                                            </group>
                                            <group>
                                                <field name="credit_card_id"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="credit_card_tree">
        <field name="name">Credit card tree</field>
        <field name="model">credit.card</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>

    <record id="action_credit_card_view" model="ir.actions.act_window">
        <field name="name">Tarjetas</field>
        <field name="res_model">credit.card</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="credit_card_main_menu"
        name="Tarjetas"
        parent="l10n_account_check.treasury_main_menu"
        sequence="40"
    />

    <menuitem
        id="credit_card_menu"
        name="Tarjetas"
        parent="credit_card_main_menu"
        action="action_credit_card_view"
        sequence="100"
    />

</odoo>

