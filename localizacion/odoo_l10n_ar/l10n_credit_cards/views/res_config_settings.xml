<odoo>

    <record model="ir.ui.view" id="res_config_settings_credit_card_journal_view_form">
        <field name="name">res_config_settings_credit_card_journal_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_payment_line.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="account_payment_line_settings" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="account_check_settings">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Configuración de tarjeta de crédito</span>
                        <span class="fa fa-lg fa-building-o" title="Los valores establecidos aquí son específicos de la empresa." aria-label="Los valores establecidos aquí son específicos de la empresa." groups="base.group_multi_company" role="img"/>
                        <div class="text-muted">
                                            Diario por defecto al cargar tarjetas de crédito
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="credit_card_journal_id" class="col-lg-4 o_light_label"/>
                                <field name="credit_card_journal_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>

