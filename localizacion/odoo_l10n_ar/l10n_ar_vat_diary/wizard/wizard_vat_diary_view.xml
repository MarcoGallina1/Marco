<odoo>
    <data>

        <record model="ir.ui.view" id="wizard_vat_diary_view_form">
            <field name="name">Wizard vat diary view form</field>
            <field name="model">wizard.vat.diary</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="type"/>
                            <field name="separate_not_taxable_from_exempt"/>
                            <field name="include_suffered_retentions" attrs="{'invisible': [('type', '!=', 'purchases')]}"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button type="object"
                                name="generate_xls_report"
                                string="Descargar XLS"
                                class="btn-primary"/>
                        <button type="special"
                                special="cancel"
                                string="Cancelar"
                                class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_iva_diary" model="ir.actions.act_window">
            <field name="name">Subdiario IVA</field>
            <field name="res_model">wizard.vat.diary</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="wizard_vat_diary_menu"
            name="Subdiario IVA"
            action="action_view_iva_diary"
            parent="l10n_ar.reports_ar_main_menu"
            sequence="15"
        />

    </data>
</odoo>

