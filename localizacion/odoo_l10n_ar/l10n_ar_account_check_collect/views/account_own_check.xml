<odoo>
    <data>

        <record model="ir.ui.view" id="account_own_check_form">
            <field name="name">Account own check form</field>
            <field name="model">account.own.check</field>
            <field name="inherit_id" ref="l10n_account_check.account_own_check_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button
                        name="%(account_check_collect_wizard_action)d"
                        string="Cobrar"
                        class="oe_highlight"
                        states="draft"
                        groups="l10n_account_check.group_account_treasury_manager"
                        type="action"
                        context="{
                            'default_issue_date': issue_date,
                            'default_payment_date': payment_date,
                            'default_collect_date': collect_date,
                            'default_amount': amount,
                            'default_collect_from_check': True,
                        }"
                    />
                    <button
                        name="cancel_collect"
                        type="object"
                        string="Revertir Cobro"
                        confirm="¿Está seguro?"
                        states="collect"
                        groups="l10n_account_check.group_account_treasury_manager"
                    />
                </header>
                <xpath expr="//field[@name='bank_id']/.." position="after">
                    <group name="collect" string="Cobro" attrs="{'invisible': [('collect_move_id', '=', False)]}">
                        <field
                            name="collect_move_id"
                            readonly="1"
                        />
                        <field
                            name="collect_date"
                            readonly="1"
                        />
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="account_own_check_tree">
            <field name="name">Account own check tree</field>
            <field name="model">account.own.check</field>
            <field name="inherit_id" ref="l10n_account_check.account_own_check_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-success">state in ['handed','collect']</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="l10n_own_check_reconcile.not_reconciled_checks_action">
            <field name="domain">[('state', 'in', ['handed','collect'])]</field>
        </record>

    </data>
</odoo>

