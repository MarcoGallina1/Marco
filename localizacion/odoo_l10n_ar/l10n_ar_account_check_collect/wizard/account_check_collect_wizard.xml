<odoo>
    <data>

        <record model="ir.ui.view" id="account_check_collect_wizard_form">
            <field name="name">Cobrar Cheque</field>
            <field name="model">account.check.collect.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group name="collect_data" string="Datos de cobro">
                        <field name="collect_from_check" invisible="1"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="journal_id"/>
                        <field name="collect_date"/>
                    </group>
                    <group name="check_data" string="Datos de cheque">
                        <field name="name" attrs="{'required': [('collect_from_check', '=', False)], 'invisible': [('collect_from_check', '=', True)]}"/>
                        <field name="check_journal_id" attrs="{'required': [('collect_from_check', '=', False)], 'invisible': [('collect_from_check', '=', True)]}"/>
                        <field name="bank_id" attrs="{'required': [('collect_from_check', '=', False)], 'invisible': [('collect_from_check', '=', True)]}"/>
                        <field name="check_type" attrs="{'required': [('collect_from_check', '=', False)], 'invisible': [('collect_from_check', '=', True)]}"/>
                        <field name="issue_date"/>
                        <field name="payment_date"/>
                        <field name="check_location_id" attrs="{'invisible': [('collect_from_check', '=', True)]}"/>
                        <field name="amount"/>
                    </group>
                    <footer>
                        <button
                            type="object"
                            name="collect_check"
                            string="Cobrar"
                            class="oe_highlight"
                        />
                        <button
                            class="oe_link"
                            special="cancel"
                            string="Cancelar"
                        />
                    </footer>
                </form>
            </field>
        </record>

        <record  id="account_check_collect_wizard_action" model="ir.actions.act_window">
            <field name="name">Cobrar cheques</field>
            <field name="res_model">account.check.collect.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="account_check_collect_menu"
            action="account_check_collect_wizard_action"
            name="Cobrar cheques"
            parent="l10n_account_check.treasury_own_checks_main_menu"
            sequence="30"
        />

    </data>
</odoo>

