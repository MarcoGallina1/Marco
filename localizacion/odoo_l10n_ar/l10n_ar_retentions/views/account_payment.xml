<odoo>
    <data>

        <record model="ir.ui.view" id="retentions_payment_form">
            <field name="name">Retentions payment form</field>
            <field name="model">account.payment</field>
            <field name="priority">50</field>
            <field name="inherit_id" ref="l10n_payment_line.view_account_payment_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="retentions" string="Retenciones">
                        <field name="retention_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom" string="Retenciones">
                                <field name="company_id" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="payment_id" invisible="1"/>
                                <field name="payment_currency_id" invisible="1"/>
                                <field name="same_currency_as_payment" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="journal_id"/>
                                <field name="retention_id"
                                       domain="[('company_id', '=', company_id), '|', ('type_tax_use', '=', parent.payment_type == 'outbound' and 'purchase'), ('type_tax_use', '=', parent.payment_type == 'inbound' and 'sale')]"/>
                                <field name="certificate_no"/>
                                <field name="date"/>
                                <field name="activity_id"
                                       attrs="{'required': [('parent.payment_type', '=', 'outbound'),('type','=','profit')],
                                              'invisible': [('type','!=','profit')]}"/>
                                <field name="rate"/>
                                <field name="aliquot"/>
                                <field name="base" sum="Total"/>
                                <field name="amount" sum="Total"/>
                                <field name="payment_currency_amount" sum="Total"/>
                                <field name="name" invisible="1"/>
                                <field name="jurisdiction" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</odoo>

