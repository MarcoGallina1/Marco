<odoo>
    <data>

        <record id="wizard_sell_check_form" model="ir.ui.view">
            <field name="name">Wizard.sell.check.form</field>
            <field name="model">wizard.sell.check</field>
            <field name="arch" type="xml">
                <form string="Vender cheques">
                    <field name="display_error_mesage" invisible="1"/>
                    <p attrs="{'invisible': [('display_error_mesage', '!=', True)]}" style="text-align: center">Los cheques seleccionados deben ser de la misma compañia.</p>
                    <div name="check_sale" attrs="{'invisible': [('display_error_mesage', '=', True)]}">
                        <field name="company_id" invisible="1"/>
                        <field name="initial_amount" invisible="1"/>
                        <group string="Datos de la operación">
                            <group>
                                <field name="bank_account_id" attrs="{'invisible': [('partner_id', '!=', False)]}" widget="selection"/>
                                <field name="partner_id" attrs="{'invisible': [('bank_account_id', '!=', False)]}"/>
                            </group>
                            <group>
                                <field name="journal_id" attrs="{'invisible': [('partner_id', '=', False)],
                                                                'required': [('partner_id', '!=', False)]}"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <group string="Importes">
                            <group>
                                <field name="commission"/>
                                <field name="interests"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="commission_account_id" attrs="{'required': [('commission', '!=', 0)]}"/>
                                <field name="interest_account_id" attrs="{'required': [('interests', '!=', 0)]}"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_sold_check_document" string="Vender" type="object" class="oe_highlight" attrs="{'invisible': [('display_error_mesage', '=', True)]}"/>
                            <button string="Cancelar" class="oe_link" special="cancel" attrs="{'invisible': [('display_error_mesage', '=', True)]}"/>
                            <button string="OK" class="oe_highlight" special="cancel" attrs="{'invisible': [('display_error_mesage', '=', False)]}"/>
                        </footer>
                    </div>
                </form>
            </field>
        </record>

        <!-- ACCIÓN  -->
        <act_window 
            name="Vender cheques" 
            res_model="wizard.sell.check" 
            binding_model="account.third.check" 
            binding_views="list,form" 
            view_mode="form" 
            target="new" 
            view_id="wizard_sell_check_form" 
            id="action_sell_checks"
        />

    </data>
</odoo>

