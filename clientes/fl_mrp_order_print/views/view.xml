<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="paperformat_fl_mrp" model="report.paperformat">
            <field name="name">FL MRP</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">28</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
    </data>

    <template id="report_mrporder_fl" inherit_id="mrp.report_mrporder">
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-12" style="text-align:left;">
                        <strong><span>Fecha de Produccion: </span></strong><span t-field="o.date_planned_start"/>
                    </div>
                </div>
                <div class="row" style="padding-top:20px;">
                    <div class="col-12" style="text-align:left;">
                        <strong><span>Codigo: </span></strong><span t-field="o.product_id.default_code"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12" style="text-align:left;">
                        <strong><span>Producto: </span></strong><span t-field="o.product_id.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12" style="text-align:left;">
                        <strong><span>Cantidad a Producir: </span></strong>
                        <span t-field="o.product_qty"/>
                        <span t-field="o.product_uom_id.name"/>
                    </div>
                </div>
                <div class="row" style="padding-top:20px;">
                    <div class="col-4" style="text-align:left;border:1px solid">
                        <strong><span>Producto:</span></strong>
                    </div>
                    <div class="col-4" style="text-align:left;border:1px solid">
                        <strong><span>Cantidad:</span></strong>
                    </div>
                    <div class="col-4" style="text-align:left;border:1px solid">
                        <strong><span>Unidades:</span></strong>
                    </div>
                </div>
                <t t-foreach="o.move_raw_ids" t-as="line">
                    <div class="row">
                        <div class="col-4" style="text-align:left;border:1px solid">
                            <span t-field="line.product_id.name"/>
                        </div>
                        <div class="col-4" style="text-align:left;border:1px solid">
                            <span t-field="line.product_uom_qty"/>
                        </div>
                        <div class="col-4" style="text-align:left;border:1px solid">
                            <span t-field="line.product_uom.name"/>
                        </div>
                    </div>
                </t>
                <div class="row" style="padding-top:20px;">
                    <div class="col-12" style="text-align:left;">
                        <strong><span>Responsable: </span></strong><span t-field="o.user_id.name"/>
                    </div>
                </div>

            </div>
        </xpath>
    </template>

    <record id="mrp.action_report_production_order" model="ir.actions.report">
        <field name="paperformat_id" ref="fl_mrp_order_print.paperformat_fl_mrp"/>
    </record>

    <record id="action_mrp_categ_fl" model="ir.actions.act_window">
        <field name="name">production Category</field>
        <field name="res_model">mrp.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{}"/>
    </record>

    <menuitem id="menu_mrp_categ_fl"
              name="Production Category"
              parent="mrp.menu_mrp_configuration"
              groups="mrp.group_mrp_manager"
              action="action_mrp_categ_fl"
              sequence="100"/>


    <!--record id="product_template_form_view2" model="ir.ui.view">
        <field name="name">product.template.form.view2</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="fl_prod_categ_id"/>
            </field>
        </field>
    </record-->

    <record id="prod_prod_fl_form_view" model="ir.ui.view">
        <field name="name">prod.prod.fl.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="fl_prod_categ_id"/>
            </field>
        </field>
    </record>

    <record id="mrp_production_form_view2" model="ir.ui.view">
        <field name="name">mrp.production.form.view2</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <field name="bom_id" position="after">
                <field name="fl_prod_categ_id"/>
            </field>
        </field>
    </record>

</odoo>
